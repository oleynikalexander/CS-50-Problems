#include <cs50.h>
#include <stdio.h>

int main(void)
{
    // Ask for your name and where live
    // 1. We must introduce variable`s type before using it
    // 2. We must put ";" at the end of function
    string name = get_string("What is your name? ");
    string location = get_string("Where do you live? ");

    // Say hello
    //We used /n because we belive it is more esthetical
    // 3. We must be aware of sintactical errors and introduce correctly camand names
    printf("Hello, %s, from %s!/n", name, location);
}
